<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/moutain"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/iv_More_HomeFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_more_" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_More_HomeFragment"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/my_logo" />

            <ImageView
                android:id="@+id/search_HomeFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginEnd="100dp"
                android:src="@drawable/ic_search" />

            <ImageView
                android:id="@+id/wallet_HomeFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginEnd="50dp"
                android:src="@drawable/ic_wallet" />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:elevation="10dp"
            android:padding="5dp"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:id="@+id/relativeLayoutTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/white">

                <ImageView
                    android:id="@+id/iv_Flight_HomeFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_flight" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_Flight_HomeFragment"
                    android:layout_marginStart="20dp"
                    android:text="Flight"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/iv_Hotel_HomeFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_toEndOf="@id/iv_Flight_HomeFragment"
                    android:src="@drawable/ic_hotel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_Flight_HomeFragment"
                    android:layout_marginStart="50dp"
                    android:layout_toEndOf="@id/iv_Flight_HomeFragment"
                    android:text="Hotels"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_Train_HomeFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_toEndOf="@id/iv_Hotel_HomeFragment"
                    android:src="@drawable/ic_train" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_Flight_HomeFragment"
                    android:layout_marginStart="60dp"
                    android:layout_toEndOf="@id/iv_Hotel_HomeFragment"
                    android:text="Trains \n Bus"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_Holiday_HomeFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:layout_toEndOf="@id/iv_Train_HomeFragment"
                    android:src="@drawable/ic_holiday" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_Flight_HomeFragment"
                    android:layout_marginStart="70dp"
                    android:layout_toEndOf="@id/iv_Train_HomeFragment"
                    android:text="Holidays \n Packages"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:elevation="10dp"
            android:padding="5dp"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:id="@+id/relativeLayoutBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/white">

                <ImageView
                    android:id="@+id/iv_AirportCabs_HomeFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_car" />

                <TextView
                    android:id="@+id/tvAirportCarcab_Homefragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_AirportCabs_HomeFragment"
                    android:layout_marginStart="20dp"
                    android:text="Airport \n Cabs"
                    android:textColor="@color/black" />


                <ImageView
                    android:id="@+id/iv_HomeStays_HomeFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_toEndOf="@id/iv_AirportCabs_HomeFragment"
                    android:src="@drawable/ic_hotel" />

                <TextView
                    android:id="@+id/tvHomeStay_HomeFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_AirportCabs_HomeFragment"
                    android:layout_marginStart="50dp"
                    android:layout_toEndOf="@id/iv_AirportCabs_HomeFragment"
                    android:text="HomeStays"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/iv_OutstationCabs_HomeFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_toEndOf="@id/iv_HomeStays_HomeFragment"
                    android:src="@drawable/ic_car" />

                <TextView
                    android:id="@+id/tvOutstationCab_Homefragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_AirportCabs_HomeFragment"
                    android:layout_marginStart="60dp"
                    android:layout_toEndOf="@id/iv_HomeStays_HomeFragment"
                    android:text="outstation \n cabs"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/iv_Activity_HomeFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:layout_toEndOf="@id/iv_OutstationCabs_HomeFragment"
                    android:src="@drawable/ic_holiday" />

                <TextView
                    android:id="@+id/tvActivity_HomeFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_AirportCabs_HomeFragment"
                    android:layout_marginStart="70dp"
                    android:layout_toEndOf="@id/iv_OutstationCabs_HomeFragment"
                    android:text="tour"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/iv_SelfDrive_HomeFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvAirportCarcab_Homefragment"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_selfdrive" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_SelfDrive_HomeFragment"
                    android:layout_marginStart="20dp"
                    android:text="Airport \n Cabs"
                    android:textColor="@color/black" />

                <ImageView
