                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_pnr_HomeFragment"
                    android:layout_marginStart="60dp"
                    android:layout_toEndOf="@id/iv_NearBy_HomeFragment"
                    android:text="Trains PNR \n Status"
                    android:textColor="@color/black" />

                <ImageView
