                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvActivity_HomeFragment"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="40dp"
                    android:layout_toEndOf="@id/iv_OutstationCabs_HomeFragment"
                    android:src="@drawable/ic_visa" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_Visa_HomeFragment"
                    android:layout_marginStart="70dp"
                    android:layout_toEndOf="@id/iv_pnr_HomeFragment"
                    android:text="Visa \n Servises"
                    android:textColor="@color/black" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="50dp">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:elevation="10dp"
                android:padding="5dp"
                app:cardCornerRadius="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_FlightStatus_HomeFragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_flight" />

                    <TextView
                        android:id="@+id/tv_FlightStatus_HomeFragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Flight Status"
                        android:textColor="@color/black" />

                    <ImageView
                        android:layout_width="2dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="5dp"
                        android:background="@android:color/darker_gray" />

                    <ImageView
                        android:id="@+id/iv_GiftCards_HomeFragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_giftcard" />

                    <TextView
                        android:id="@+id/tv_GiftCard_HomeFragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Gift Card"
                        android:textColor="@color/black" />

                    <ImageView
                        android:layout_width="2dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="5dp"
                        android:background="@android:color/darker_gray" />

                    <ImageView
                        android:id="@+id/iv_Offer_HomeFragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_offer" />

                    <TextView
                        android:id="@+id/tv_Offer_HomeFragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Offers"
                        android:textColor="@color/black" />

                    <ImageView
                        android:layout_width="2dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="5dp"
                        android:background="@android:color/darker_gray" />

                    <ImageView
                        android:id="@+id/iv_metro_HomeFragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_train" />

                    <TextView
                        android:id="@+id/tv_Metro_HomeFragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="metro"
                        android:textColor="@color/black" />

                    <ImageView
                        android:layout_width="2dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="5dp"
                        android:background="@android:color/darker_gray" />

                    <ImageView
                        android:id="@+id/iv_UPI_HomeFragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_upi" />

                    <TextView
                        android:id="@+id/tv_UPI_HomeFragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="UPI Pay"
                        android:textColor="@color/black" />

                    <ImageView
                        android:layout_width="2dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="5dp"
                        android:background="@android:color/darker_gray" />

                    <ImageView
                        android:id="@+id/iv_mmt_HomeFragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_mmt" />

                    <TextView
                        android:id="@+id/tv_mmt_HomeFragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="MMTBl"
                        android:textColor="@color/black" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </HorizontalScrollView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:elevation="10dp"
            android:padding="5dp"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvDid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Did you get Vaccinated ?"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="30dp"
                    android:src="@drawable/ic_visa" />

                <TextView
                    android:id="@+id/tvYou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvDid"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="you can download Your CoWIN Vaccination\nCertificate !"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/ivsheet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvYou"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_page" />

                <TextView
                    android:id="@+id/tvbook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvYou"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/ivsheet"
                    android:text="Book your\nvaccination slot"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/uvdoenlaod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvYou"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/tvbook"
                    android:src="@drawable/ic_download" />

                <TextView
                    android:id="@+id/tvdownload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvYou"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/uvdoenlaod"
                    android:text="Download your\ncertificate"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/ivsheet"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/line"
                    android:layout_marginStart="10dp"
                    android:drawableEnd="@drawable/ic_right"
                    android:padding="5dp"
                    android:text="Already downloaded? View Your certificate here"
                    android:textColor="#4D95FF"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="5dp"
                android:text="CONTINUE YOUR SEARCH"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

