                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_HomeStays_HomeFragment"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="60dp"
                    android:layout_toEndOf="@id/iv_SelfDrive_HomeFragment"
                    android:src="@drawable/ic_navigation" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_NearBy_HomeFragment"
                    android:layout_marginStart="50dp"
                    android:layout_toEndOf="@id/iv_AirportCabs_HomeFragment"
                    android:text="HomeStays"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/iv_pnr_HomeFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvOutstationCab_Homefragment"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@id/iv_NearBy_HomeFragment"
                    android:src="@drawable/ic_pnr" />

                <TextView
