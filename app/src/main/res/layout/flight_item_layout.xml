<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="10dp"
    android:padding="10dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvFlightName_flight_item_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableStart="@drawable/ic_flight"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="dshds"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvStartTime1_flight_item_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvFlightName_flight_item_layout"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Start Time :"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvStartTime_flight_item_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvFlightName_flight_item_layout"
            android:layout_toEndOf="@id/tvStartTime1_flight_item_layout"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="dshds"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSource1_flight_item_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvStartTime_flight_item_layout"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Source :"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvSource_flight_item_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvStartTime_flight_item_layout"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/tvSource1_flight_item_layout"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="dshds"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEndTime1_flight_item_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvFlightName_flight_item_layout"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/tvStartTime_flight_item_layout"
            android:gravity="center"
            android:text="End Time :"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvEndTime_flight_item_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_below="@id/tvFlightName_flight_item_layout"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/tvEndTime1_flight_item_layout"
            android:gravity="center"
            android:text="dshds"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDestination1_flight_item_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvEndTime_flight_item_layout"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/tvStartTime_flight_item_layout"
            android:gravity="center"
            android:text="Destination : "
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDestination_flight_item_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_below="@id/tvEndTime_flight_item_layout"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/tvDestination1_flight_item_layout"
            android:gravity="center"
            android:text="dshds"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPrice_flight_item_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvFlightName_flight_item_layout"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/tvEndTime_flight_item_layout"
            android:gravity="center"
            android:text="dshds"
            android:textColor="@color/black"
            android:textStyle="bold" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>